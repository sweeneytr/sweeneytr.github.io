---
import { Pill } from "@eliancodes/brutal-ui";

const tools = {
  "For Fun": [
    {
      name: "FromSoft Meme Generator",
      url: "https://rezuaq.be/new-area/image-creator/",
    },
  ],
  "Web Dev": [{ name: "Open Graph", url: "https://opengraph.dev/" }],
  Embedded: [{ name: "Compiler Explorer", url: "https://godbolt.org/" }],
};
---

<h2 class="text-2xl md:text-4xl lg:text-6xl mb-8 poppins">Useful Tools</h2>
<ul class="flex gap-4 flex-wrap">
  {
    Object.entries(tools).map(([title, entries]) => {
      return (
        <div>
          <h3 class="text-xl md:text-2xl lg:text-4xl">{title}</h3>
          {entries.map((item) => (
            <li>
              <Pill>
                <a
                  class="sanchez"
                  href={item.url}
                  target="_blank"
                  title={`Go to ${item.name}`}
                >
                  {item.name}
                </a>
              </Pill>
            </li>
          ))}
        </div>
      );
    })
  }
</ul>
