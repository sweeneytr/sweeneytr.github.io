---
import { Pill } from "@eliancodes/brutal-ui";

const builtWith = [{ name: "Masonry", url: "https://masonry.desandro.com/" }];
---

<h2 class="text-2xl md:text-4xl lg:text-6xl mb-8 sanchez">Built with</h2>
<ul class="flex gap-4 flex-wrap">
  {
    builtWith.map((item) => (
      <li>
        <Pill>
          <a
            class="sanchez"
            href={item.url}
            target="_blank"
            title={`Go to ${item.name}`}
          >
            {item.name}
          </a>
        </Pill>
      </li>
    ))
  }
</ul>
