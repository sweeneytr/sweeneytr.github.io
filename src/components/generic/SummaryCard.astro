---
import { Card } from "@eliancodes/brutal-ui";
import { Image } from "astro:assets";
import ImageCredit from "./ImageCredit.astro";
import type { ComponentProps } from "astro/types";

interface Props {
  title: string;
  imgSrc: ImageMetadata;
  imgAlt: string;
  description: string;
  credit?: ComponentProps<typeof ImageCredit>;
}

const { title, imgAlt, imgSrc, description, credit } = Astro.props;
---

<Card color="white">
  <h3 class="poppins text-lg md:text-xl">{title}</h3>
  <div class="my-4">
    <div class="rounded-lg border-3 border-black h-56">
      <Image
        src={imgSrc}
        alt={imgAlt}
        width={800}
        height={400}
        class="rounded h-full w-full object-cover"
      />
    </div>
    {
      credit && (
        <div class="flex flex-justify-end">
          <ImageCredit {...credit} />
        </div>
      )
    }
  </div>

  <p class="poppins">{description}</p>
  <slot />
</Card>
