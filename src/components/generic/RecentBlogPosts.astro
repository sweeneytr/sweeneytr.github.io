---
import { getCollection } from 'astro:content';
import { Card } from '@eliancodes/brutal-ui';
import { Button } from '@eliancodes/brutal-ui';
import PostGrid from './PostGrid.astro';
import PostItem from './PostItem.astro';
import BlogSummaryCard from '@components/blog/BlogSummaryCard.astro';

interface Props {
  count?: number;
}

const { count } = Astro.props;

const posts = await getCollection('blog').then((posts) =>
  posts.reverse().slice(0, count ?? 3)
);
---

<section class='mt-8'>
  <Card color="#facc15">
    <div class='flex justify-between items-start'>
      <h2 class='text-2xl md:text-4xl lg:text-6xl mb-8 dm-serif'>
        Recent Blogposts
      </h2>
      <div class='hidden md:block'>
        <Button href='/blog/'>Go to blog &rarr;</Button>
      </div>
      <div class='block md:hidden'>
        <Button href='/blog/'>to blog</Button>
      </div>
    </div>
    <PostGrid>
      {
        posts.map((post) => (
          <PostItem>
            <BlogSummaryCard post={post} />
          </PostItem>
        ))
      }
    </PostGrid>
  </Card>
</section>
